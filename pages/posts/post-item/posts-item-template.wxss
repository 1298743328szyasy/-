.post-container{
  display: flex;
  flex-direction: column;
  background-color: #fff;
  border-top:1px solid #ededed;
  border-bottom: 1px solid #ededed;
  margin-top: 10rpx;
}
.post-author-text{
  margin: 10rpx 0 20rpx 10rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}
.post-author{
  height: 60rpx;
  width: 60rpx;
  /* margin-left: 10rpx;
  margin-top: 10rpx; */
}
.post-text{
  font-size: 26rpx;
  margin-left: 20rpx;
}
.post-title{
  font-size: 34rpx;
  font-weight: 600;
  margin-left: 10rpx;
  margin-bottom: 10rpx;
}
.post-image{
  width:100%;
  height: 340rpx;
  margin-bottom:15rpx;
}
.post-content{
  font-size: 28rpx;
  letter-spacing: 4rpx;
  color:#666;
  margin-left: 20rpx;
  margin-bottom:15rpx;
}
.post-like-font{
  display:flex;
  flex-direction: row;
  align-items: center;
  margin-left: 20rpx;
}
.post-like{
  height:32rpx;
  width: 32rpx;
  margin-right: 10rpx;
}
.post-font{
  font-size: 26rpx;
  margin-right: 40rpx;
  color: #333;
}