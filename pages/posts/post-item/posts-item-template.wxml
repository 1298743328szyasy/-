<template name="aaa">
<view class="post-container">
  <view class="post-author-text">
    <image src="{{avatar}}" class="post-author"></image>
    <text class="post-text">{{date}}</text>
  </view>
  <text class="post-title">{{title}}</text>
  <image src="{{imgSrc}}" class="post-image"></image>
  <text class="post-content">{{content}}</text>
  <view class="post-like-font">
    <image src="{{post_like}}" class="post-like"></image>
    <text class="post-font">{{collection}}</text>
    <image src="{{post_like1}}" class="post-like"></image>
    <text class="post-font">{{reading}}</text>
  </view>
</view>
</template>